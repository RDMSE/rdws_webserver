{
  "name": "cpp-microservices-gateway",
  "version": "1.0.0",
  "description": "API Gateway for C++ Microservices Architecture",
  "main": "api-gateway.js",
  "scripts": {
    "start": "node api-gateway.js",
    "dev": "nodemon api-gateway.js",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint api-gateway.js __tests__/",
    "lint:fix": "eslint api-gateway.js __tests__/ --fix",
    "build": "echo 'Building C++ microservices...' && cd build && make -j$(nproc)",
    "deploy:check": "./scripts/verify-deploy.sh",
    "deploy:fedora": "./scripts/deploy-fedora.sh"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "cpp",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.2",
    "cors": "^2.8.5",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.1",
    "jest": "^29.7.0",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}