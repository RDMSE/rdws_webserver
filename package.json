{
  "name": "cpp-microservices-gateway",
  "version": "1.0.0",
  "description": "API Gateway for C++ Microservices Architecture",
  "main": "dist/src/api-gateway/api-gateway.js",
  "scripts": {
    "build:ts": "tsc",
    "build:cpp": "echo 'Building C++ microservices...' && mkdir -p build && cd build && PKG_CONFIG_PATH=/usr/local/lib64/pkgconfig cmake .. && make -j$(nproc)",
    "build": "npm run build:ts && npm run build:cpp",
    "start": "npm run build:ts && node dist/src/api-gateway/api-gateway.js",
    "dev": "ts-node src/api-gateway/api-gateway.ts",
    "dev:debug": "ts-node src/api-gateway/debug/api-gateway.debug.ts",
    "dev:watch": "nodemon --exec ts-node src/api-gateway/api-gateway.ts",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:coverage": "jest --coverage",
    "test:ci": "jest --ci --coverage --watchAll=false",
    "lint": "eslint src/api-gateway/api-gateway.ts test/",
    "lint:fix": "eslint src/api-gateway/api-gateway.ts test/ --fix",
    "type-check": "tsc --noEmit",
    "local": "ts-node src/api-gateway/tests/local/app.local.ts",
    "local:start": "ts-node src/api-gateway/tests/local/app.local.ts start",
    "local:health": "ts-node src/api-gateway/tests/local/app.local.ts health",
    "local:interactive": "ts-node src/api-gateway/tests/local/app.local.ts interactive",
    "deploy:check": "./scripts/verify-deploy.sh",
    "deploy:fedora": "./scripts/deploy-fedora.sh",
    "db:setup": "./scripts/setup-database-manual.sh development",
    "db:setup:prod": "./scripts/setup-database-manual.sh production",
    "db:migrate": "./scripts/migrate-database.sh development migrate",
    "db:migrate:prod": "./scripts/migrate-database.sh production migrate",
    "db:seed": "./scripts/migrate-database.sh development seed",
    "db:seed:prod": "./scripts/migrate-database.sh production seed",
    "db:reset": "./scripts/migrate-database.sh development reset",
    "db:status": "./scripts/migrate-database.sh development status",
    "db:external": "./scripts/enable-postgresql-external.sh development",
    "db:external:prod": "./scripts/enable-postgresql-external.sh production",
    "cpp:config": "./scripts/generate-cpp-config.sh development ./config",
    "cpp:config:prod": "./scripts/generate-cpp-config.sh production ./config"
  },
  "keywords": [
    "api-gateway",
    "microservices",
    "cpp",
    "rest-api"
  ],
  "author": "",
  "license": "MIT",
  "dependencies": {
    "axios": "^1.12.2",
    "commander": "^14.0.1",
    "cors": "^2.8.5",
    "dotenv": "^17.2.3",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "morgan": "^1.10.0",
    "pg": "^8.11.3"
  },
  "devDependencies": {
    "@types/axios": "^0.14.4",
    "@types/cors": "^2.8.19",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.3",
    "@types/helmet": "^0.0.48",
    "@types/jest": "^30.0.0",
    "@types/morgan": "^1.9.10",
    "@types/node": "^24.6.2",
    "@types/pg": "^8.10.7",
    "@types/supertest": "^6.0.3",
    "eslint": "^9.36.0",
    "jest": "^29.7.0",
    "nodemon": "^3.1.10",
    "supertest": "^6.3.4",
    "ts-jest": "^29.4.4",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.3"
  },
  "engines": {
    "node": ">=18.0.0"
  }
}
