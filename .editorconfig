# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# 4 space indentation for C++ files
[*.{cpp,hpp,h,cc,cxx,hxx}]
indent_style = space
indent_size = 4

# 2 space indentation for web files
[*.{js,ts,json,html,css,scss,yaml,yml}]
indent_style = space
indent_size = 2

# 4 space indentation for Python
[*.py]
indent_style = space
indent_size = 4

# Tab indentation for Makefiles
[Makefile]
indent_style = tab

# Shell scripts
[*.{sh,bash}]
indent_style = space
indent_size = 2

# SQL files
[*.sql]
indent_style = space
indent_size = 2

# Markdown files
[*.md]
indent_style = space
indent_size = 2
trim_trailing_whitespace = false

# Docker files
[{Dockerfile,*.dockerfile}]
indent_style = space
indent_size = 2

# CMake files
[{CMakeLists.txt,*.cmake}]
indent_style = space
indent_size = 2

# Configuration files
[*.{ini,cfg,conf,config}]
indent_style = space
indent_size = 2

# Package files
[{package.json,package-lock.json,*.config.js}]
indent_style = space
indent_size = 2