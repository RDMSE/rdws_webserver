{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "type": "object",
  "title": "Create User Schema",
  "description": "Schema for creating a new user",
  "properties": {
    "name": {
      "type": "string",
      "minLength": 2,
      "maxLength": 100,
      "description": "User's full name"
    },
    "email": {
      "type": "string",
      "format": "email",
      "maxLength": 255,
      "description": "User's email address"
    }
  },
  "required": ["name", "email"],
  "additionalProperties": false
}